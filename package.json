{
  "name": "trendyol-oblio-integration",
  "version": "1.0.0",
  "description": "Frontend application for integrating Trendyol orders with Oblio invoicing system",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "node -e \"const fs=require('fs'); fs.copyFileSync('src/index.prod.html', 'dist/index.html'); fs.cpSync('src/styles', 'dist/styles', {recursive: true});\"",
    "dev": "tsc --watch",
    "serve": "python -m http.server 8000 --directory dist",
    "start": "npm run build && npm run serve",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "trendyol",
    "oblio",
    "invoice",
    "integration",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  }
}
